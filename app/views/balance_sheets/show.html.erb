<!-- app/views/balance_sheets/_form.html.erb -->

<%= form_with(model: @balance_sheet, local: true) do |f| %>
  <div class="balance-sheets-form">
    <div class="form-group">
      <%= f.label :year %>
      <%= f.number_field :year %>
    </div>

    <div class="form-group">
      <%= f.label :month %>
      <%= f.select :month, (1..12).map { |m| [Date::MONTHNAMES[m], m] } %>
    </div>

    <div class="form-group">
      <%= f.label :total_income %>
      <%= f.number_field :total_income, step: 0.01 %>
    </div>

    <h3>Expenses</h3>
    <div id="expenses">
      <%= f.fields_for :expenses do |expense_form| %>
        <div class="form-group">
          <%= expense_form.label :description %>
          <%= expense_form.text_field :description %>
        </div>

        <div class="form-group">
          <%= expense_form.label :amount %>
          <%= expense_form.number_field :amount, step: 0.01 %>
        </div>

        <div class="form-group">
          <%= expense_form.label :date %>
          <%= expense_form.date_field :date %>
        </div>
      <% end %>
    </div>

    <div>
      <%= f.submit "Update Balance Sheet", class: "btn" %>
    </div>
  </div>
<% end %>
