<div class="expense-fields">
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class="form-group">
    <%= f.label :amount %>
    <%= f.number_field :amount, step: 0.01 %>
  </div>

  <div class="form-group">
    <%= f.label :date %>
    <%= f.date_field :date %>
  </div>

  <button type="button" class="remove-expense-btn">Remove</button>
</div>
