<div align="center">
  <h1>Enter OTP</h1>
  <%= form_with url: login_otp_confirm_path, local: true do |f| %>
    <%= hidden_field_tag :email, params[:email] %>
    <%= label_tag :otp_code, "6-digit code" %>
    <%= text_field_tag :otp_code, nil, required: true, maxlength: 6, autocomplete: "one-time-code" %>
    <%= submit_tag "Verify and Sign In" %>
  <% end %>
</div>
