<!DOCTYPE html>
<html>
  <head>
    <title>REalVIEWS</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", media: "all" %>
  </head>

  <body>
    <!-- ✅ Shared Header -->
    <div class="header">
      <h1 class="site-title">REalVIEWs</h1>
      <div class="login-box">
        <% if session[:user_id] %>
          <%= link_to "Logout", logout_path, method: :delete, class: "btn btn-danger" %>
        <% else %>
          <%= link_to "Login", login_otp_path, class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>

    <!-- ✅ Page Content -->
    <div class="page-content">
      <% if notice %>
        <div class="flash notice"><%= notice %></div>
      <% end %>

      <% if alert %>
        <div class="flash alert"><%= alert %></div>
      <% end %>
      <%= yield %>
    </div>

    <!-- ✅ Shared Footer -->
    <div class="footer">
      <p>© <%= Time.current.year %> Contact pradeepr95@gmail.com for any concerns.</p>
    </div>
  </body>
  
</html>
